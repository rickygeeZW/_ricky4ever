#include<stdio.h>

int main() {
   int s1, s2, s3, s4, s5, sum, total = 500;
   float per;
    float avg,mean ;
/*marks are entered until = 5 times*/
   printf("\nEnter marks of 5 subjects : ");
   scanf("%d %d %d %d %d", &s1, &s2, &s3, &s4, &s5);
/*we are now working the tolal*/
   sum = s1 + s2 + s3 + s4 + s5;
   printf("\nSum : %d", sum);
/*we are now working the percentage*/
   per = (sum * 100) / total;
   printf("\nPercentage : %f", per);
/*we are now working the average*/

    avg= (float)(s1+s2+s3+s4+s5)/2;
/*we are now printing  all our results */

    printf("\nSum of %d %d %d %d %d is = %d",s1,s2,s3,s4,s5,sum);
    printf("\nAverage of %d %d %d %d %d is =%f",s1,s2,s3,s4,s5,avg);
/*working the mean*/
    mean=((float)((s1+s2+s3+s4+s5)/5));
    printf("\nMean : %d", mean);
   return (0);
}
